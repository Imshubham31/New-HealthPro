{
    "name": "hcp_portal",
    "version": "8.0.0",
    "license": "MIT",
    "scripts": {
        "ng": "ng",
        "start": "ng serve",
        "start:apigeeLocal": "ng serve --configuration apigeeLocal",
        "start:apigeeDev": "ng serve --configuration apigeeDev",
        "start:apigeeTest": "ng serve --configuration apigeeTest",
        "start:apigeeStg": "ng serve --configuration apigeeStgDev",
        "start:apigeeStgDev": "ng serve --configuration apigeeStgDev",
        "build": "ng build --configuration apigeeDev",
        "build:apigeeLocal": "ng build --configuration apigeeLocal",
        "build:apigeeDev": "ng build --configuration apigeeDev",
        "build:apigeeTest": "ng build --configuration apigeeTest --prod",
        "build:apigeeStg": "ng build --configuration apigeeStg --prod",
        "build:apigeeMarketingStg": "ng build --configuration apigeeMarketingStg --prod",
        "build:apigeeMarketingProd": "ng build --configuration apigeeMarketingProd --prod",
        "build:apigeeProd": "ng build --configuration apigeeProd --prod",
        "test": "ng test hcp --code-coverage --no-watch",
        "test:watch": "ng test hcp --code-coverage",
        "test:watch:noSourceMaps": "ng test hcp --code-coverage --sourceMap=false",
        "lint": "ng lint ",
        "lint:fix": "ng lint hcp --fix",
        "lint:ts": "tslint -p tsconfig.json -c tslint.json",
        "lint:ts:fix": "tslint --fix -p tsconfig.json -c tslint.json",
        "strings": "node strings.js",
        "bundle-report": "yarn build:apigeeStg --project hcp --stats-json && webpack-bundle-analyzer dist/stats.json",
        "heroku-postbuild": "./.datica/post-build",
        "format": "prettier --write \"src/**/*.ts\""
    },
    "private": true,
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "pre-push": "yarn test --browsers=\"ChromeNoSandbox\""
        }
    },
    "lint-staged": {
        "*.ts": [
            "npm run lint:ts:fix",
            "git add"
        ],
        "*.{ts,html,js,json}": [
            "prettier --write",
            "git add"
        ]
    },
    "dependencies": {
        "@angular/animations": "^8.0.0",
        "@angular/common": "^8.0.0",
        "@angular/compiler": "^8.0.0",
        "@angular/core": "^8.0.0",
        "@angular/forms": "^8.0.0",
        "@angular/http": "^7.2.15",
        "@angular/platform-browser": "^8.0.0",
        "@angular/platform-browser-dynamic": "^8.0.0",
        "@angular/platform-server": "^8.0.0",
        "@angular/router": "^8.0.0",
        "@angular/service-worker": "^8.0.0",
        "@ngxd/core": "^7.0.1",
        "@types/datatables.net": "^1.10.18",
        "@types/fullcalendar": "^3.5.0",
        "angular-datatables": "^8.0.0",
        "angular2-text-mask": "^8.0.4",
        "angular2-virtual-scroll": "^0.3.1",
        "chart.js": "^2.7.2",
        "core-js": "^2.4.1",
        "datatables.net": "^1.10.20",
        "datatables.net-dt": "^1.10.20",
        "date-fns": "^2.10.0",
        "font-awesome": "^4.7.0",
        "fullcalendar": "3.6.2",
        "fuse.js": "^3.2.0",
        "inputmask": "^3.3.11",
        "jquery": "^3.4.1",
        "karma-mocha-reporter": "^2.2.5",
        "lodash": "^4.17.4",
        "ng-zorro-antd": "^8.5.2",
        "ng2-auto-complete": "^0.12.0",
        "ng2-charts": "^1.6.0",
        "ngx-pagination": "^3.1.1",
        "node-cache": "^4.2.0",
        "node-sass": "^4.12.0",
        "rxjs": "^6.5.2",
        "rxjs-compat": "^6.2.1",
        "spectre.scss": "^0.0.3",
        "timepicker": "^1.11.12",
        "ts-optchain": "^0.1.3",
        "webpack": "^4.32.2",
        "zone.js": "^0.9.1"
    },
    "devDependencies": {
        "@angular-builders/custom-webpack": "^8.0.1",
        "@angular-devkit/build-angular": "^0.803.22",
        "@angular/cli": "8.0.1",
        "@angular/compiler-cli": "^8.0.0",
        "@angular/language-service": "^8.0.0",
        "@types/jasmine": "~2.8.3",
        "@types/jasminewd2": "~2.0.2",
        "@types/node": "~6.0.60",
        "@types/node-cache": "^4.1.1",
        "codelyzer": "^5.0.1",
        "husky": "^2.3.0",
        "jasmine-core": "~2.8.0",
        "jasmine-marbles": "^0.3.1",
        "jasmine-spec-reporter": "~4.2.1",
        "karma": "~2.0.0",
        "karma-chrome-launcher": "~2.2.0",
        "karma-cli": "~1.0.1",
        "karma-coverage-istanbul-reporter": "^1.2.1",
        "karma-jasmine": "~1.1.0",
        "karma-jasmine-html-reporter": "^0.2.2",
        "karma-verbose-reporter": "^0.0.6",
        "lint-staged": "^8.1.4",
        "ng-bullet": "^1.0.3",
        "prettier": "1.16.1",
        "protractor": "~5.1.2",
        "ts-node": "~4.1.0",
        "tslint": "~5.9.1",
        "typescript": "~3.4.5",
        "webpack-bundle-analyzer": "^3.0.2"
    },
    "engines": {
        "yarn": "^1.x.x",
        "node": "12.x.x"
    },
    "heroku-run-build-script": true
}
